      "source": [
        "# hinge loss"
      ]
    },
    {
      "cell_type": "code",
      "source": [
        "def hinge(y_true,y_pred):\n",
        "  n=len(y_true)\n",
        "  loss=sum(max(0,1-y_true[i]*y_pred[i]) for i in range(n))/n\n",
        "  return loss"
      ],
      "metadata": {
        "id": "wAG1U1kZXuFN"
      },
      "execution_count": 5,
      "outputs": []
    },
    {
      "cell_type": "code",
      "source": [
        "y_true=[1,-1,1,-1]\n",
        "y_pred=[-1,2,0.5,2.3,-0.8]\n",
        "print(hinge(y_true,y_pred))"
      ],
